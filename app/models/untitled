require 'rails_helper'

RSpec.describe Card, type: :model do
  it 'check translation' do
    card = Card.new(original_text: "дом")
    expect(card.check_translation("вигвам")).to be false
  end
  it 'should check translation not correct' do
    card = Card.new(original_text: "Some Placez", translated_text: "hause")
    expect(card.check_translation("Some Plazezx")).to be false
  end
  it 'should check correct translation and strange case' do
    card = Card.new(original_text: "Дом На ХоЛме", translated_text: "hause")
    expect(card.check_translation("дОм на     ХолмЕ   ")).to be true
  end
  it 'set update_review_date!' do
    card = Card.new(original_text: "hause", translated_text: "hausec", review_date: "")
    expect(card.update_review_date!).to be false
  end

end


